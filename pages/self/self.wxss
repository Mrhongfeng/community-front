page {
  background-color: rgb(255, 250, 250);
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.container {
  width: 100%;
  height: 95%;
  margin-top: 5%;
  border-top-left-radius: 70rpx;
  border-top-right-radius: 70rpx;
  background-image: linear-gradient(#d4e8fa,#e0f2f3,#f0f3f5);
}
.account-bg {
  width: 250rpx;
  height: 250rpx;
  border-radius: 250rpx;
  position: absolute;
  top: 50rpx;
}
.credit {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  float: right;
  margin-right: 10%;
  
}
.credit text {
  font-size: 32rpx;
  color: red;
  font-weight: bolder;
}
.separate {
  height: 100rpx;
  width: 80%;
  margin: 0 auto;
  position: relative;
}
.line {
  width: 100%;
  top: 50%;
  border: 1px solid rgb(225, 227, 228);
  position: absolute;
}
.separate strong {
  position: absolute;
  top: 50%;
  margin-top: 20rpx;
  font-size: 40rpx;
  text-align: center;
}
.separate text {
  color: rgb(150, 152, 153);
  display: block;
  width: 180rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border: 1px solid rgb(226, 230, 231);
  border-radius: 25rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -90rpx;
  margin-top: -20rpx;
  background-color: #d3ecf0; 
}
.function-list {
  width: 80%;
  margin: 0 auto;
  display: flex;
  flex-flow: row wrap;
}
.list-item {
  text-align: center;
  flex: 0 0 33%;
  box-sizing: border-box;
  height: 180rpx;
  overflow: hidden;
}
